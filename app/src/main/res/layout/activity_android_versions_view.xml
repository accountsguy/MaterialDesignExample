<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    app:cardCornerRadius="4dp"

    app:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:text="Android Versions History"
            />
        <ImageView
            android:layout_below="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/andriodimage"
            android:background="@drawable/android_versions"
            android:text="Android Image"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/androidname"
            android:layout_below="@id/andriodimage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Android Name: "
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_bright"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/androidversion"
            android:layout_below="@id/androidname"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="60dp"
            android:text="Android Version: "
            android:gravity="center_vertical"
            android:background="@android:color/holo_blue_bright"
            android:textSize="20dp"/>

        <View
            android:layout_below="@id/androidversion"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@android:color/holo_orange_dark"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>